@import '_settings'

// normalize-css()
// base()

html
	font-family Century Gothic, Didact Gothic, sans serif

.row.title
	margin 0

.icon-block
	padding 0 15px
	
.icon-block .material-icons
	font-size inherit

.side-nav .collapsible-header
	margin 0rem

.dropdown-content li>a 
.dropdown-content li>span
	font-size 1rem
	color: #000;
	
.dropdown-content li:hover
	background-color: #cdcdcd
	
.logo
	text-align center
	padding 1.3em
	
h3.sub-logo
	
	letter-spacing .47rem

.container-header
	padding 0 5em 2em 5em
	text-align center


.quote
	font-family: Times New Roman, Times New Roman, Times, serif
	float left 
	font-size 600%
	height .75em
	margin-top -.4em

p.quote-text 
	font-size 1.7rem
	margin 1em 0 0 0
	text-align center

h4.projects
	padding .5em
	background rgba(0,0,0,.9)
	color #fff
	font-size 2rem
	margin 0 0 .2em 0

.row.port-grid
	margin-bottom 0.27em

.row .col
	padding 0 0.15rem
	
a img
	transition: transform .3s ease;

a img:hover
	overflow hidden
	-webkit-transform scale(1.05)
	-moz-transform scale(1.05)
	-ms-transform scale(1.05)
	transform scale(1.05)
	-webkit-backface-visibility hidden


.img-container
	position relative
	overflow hidden
	line-height 0.0
	
.content-blok
	position absolute
	bottom 0
	left 0
	bottom 6%
	height auto
	padding 1em
	background rgba(0,0,0,.7)
	font-size 1.2rem
	
.content-blok a
	color: #fff




	


